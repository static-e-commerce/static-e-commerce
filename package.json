{
    "name": "static-e-commerce",
    "version": "1.0.0",
    "description": "A static e-commerce site built with HTML, CSS, and TypeScript",
    "main": "src/index.html",
    "scripts": {
        "build": "tsc && npm run copy-files",
        "copy-files": "copyfiles -u 1 src/**/*.html src/**/*.css dist",
        "start": "npm run build",
        "serve": "lite-server"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/static-e-commerce/static-e-commerce"
    },
    "keywords": [
        "static",
        "e-commerce",
        "typescript",
        "html",
        "css"
    ],
    "author": "Groupe1",
    "license": "MIT",
    "devDependencies": {
        "copyfiles": "^2.4.1",
        "lite-server": "^2.5.4",
        "typescript": "^5.6.2"
    }
}
